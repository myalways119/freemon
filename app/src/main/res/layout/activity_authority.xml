<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        android:gravity="top"
        android:padding="20dp"
        >
        <!--*android:background="@color/mainYellow"-->

        <TextView
            android:id="@+id/tvUse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/IntroductionUse"
            android:textAlignment="viewStart"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginBottom="20dp"
            />

        ``<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp"
            android:gravity="top"
            android:padding="15dp"
            android:layout_weight="1"
        >
        <TextView
            android:id="@+id/tvUseComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/IntroductionUseComment"
            android:textSize="15sp"
            android:layout_marginBottom="30dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp"
            android:layout_marginBottom="20dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="1dp"
                tools:layout_editor_absoluteY="1dp"
                android:layout_weight="2"
                >
                <TextView
                    android:id="@+id/tvAllowPhoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/PhoneNumber"
                    android:textSize="17sp"
                    android:gravity="left"
                    android:layout_marginBottom="3dp"/>
                <TextView
                    android:id="@+id/tvAllowPhoneNumberComment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/AllowPhoneNumberComment"
                    android:textSize="13sp"
                    android:gravity="left"/>

            </LinearLayout>

            <Button
                android:id="@+id/btnAllowPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Allow"
                android:background="@drawable/button_round_border"
                android:textSize="13sp"
                android:layout_weight="5"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="1dp"
                tools:layout_editor_absoluteY="1dp"
                android:layout_weight="2"
                >
                <TextView
                    android:id="@+id/tvAllowCamera"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Camera"
                    android:textSize="17sp"
                    android:gravity="left"
                    android:layout_marginBottom="3dp"/>
                <TextView
                    android:id="@+id/tvAllowCameraComment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/AllowCameraComment"
                    android:textSize="13sp"
                    android:gravity="left"/>

            </LinearLayout>

            <Button
                android:id="@+id/btnAllowCamera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Allow"
                android:background="@drawable/button_round_border"
                android:textSize="13sp"
                android:layout_weight="5"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/complete"
            android:textSize="17sp"
            android:layout_gravity="right"
            android:textColor="@color/btnFontColorBlue"
        />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>