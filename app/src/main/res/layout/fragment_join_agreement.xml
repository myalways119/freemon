<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/join_frag_agree">

    <TextView
        android:id="@+id/join_agree_txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/custom_font_family"
        android:gravity="left"

        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <LinearLayout
        android:id="@+id/joing_authPhone_linearlayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="17dp"
        app:layout_constraintTop_toBottomOf="@+id/join_agree_txtTitle">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/join_agree_profile_caption"

            android:textSize="17sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/join_agree_profile_content"
            android:layout_marginTop="5dp"
            android:textSize="17sp"
            android:scrollbars="vertical"
            android:background="@drawable/corner_round_border"
            android:layout_weight="1"
            />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/join_service_agree" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/join_agree_service_caption"
            android:layout_marginTop="5dp"
            android:textSize="17sp"
            android:text="@string/join_service"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/join_agree_service_content"
            android:layout_marginTop="5dp"
            android:textSize="17sp"
            android:scrollbars="vertical"
            android:background="@drawable/corner_round_border"
            android:layout_weight="1"
            android:text="@string/join_profile"/>

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/join_profile_agree"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>