<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/join_frag_phoneAuthority"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="60dp"
    android:paddingBottom="20dp">

    <TextView
        android:id="@+id/join_authPhone_txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/custom_font_family"
        android:gravity="center"
        android:text="@string/joinPhoneNumber"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <LinearLayout
        android:id="@+id/join_authPhone_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@+id/join_authPhone_txtTitle"
        android:layout_marginTop="20dp"
        >
        <EditText
            android:id="@+id/joing_authPhon_editTxtPhoneNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:gravity="left"
            android:hint="@string/join_phoneAuth_phoneHint"
            android:theme="@style/editTextStyle"
            android:inputType="number"
            android:maxLength="11"
            />

        <Button
            android:id="@+id/btnAllowPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/AskAuthorityCode"
            android:background="@drawable/button_round_border"
            android:textSize="13sp"
            android:layout_weight="5"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/join_phoneAuth_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:text="@string/join_phoneAuth_comment"
        app:layout_constraintTop_toBottomOf="@+id/join_authPhone_linearlayout"
        />

    <Button
        android:id="@+id/join_authPhone_btnCheckCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/do_join"
        android:background="@drawable/button_round_border"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@+id/join_phoneAuth_comment"
        android:layout_marginTop="20dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>